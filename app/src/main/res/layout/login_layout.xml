<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/login_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/login_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="Log in to your account!"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/login_username_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Username"
        android:background="@drawable/rounded_corners_background_edittext"
        />
    <EditText
        android:id="@+id/login_password_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Password"
        android:background="@drawable/rounded_corners_background_edittext"
        />
    </LinearLayout>
    <Button
        android:id="@+id/signin_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/login_linear"
        android:text="Sign in"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/rounded_corners_background_button"/>
    <Button
        android:id="@+id/switch_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/signin_button"
        android:textColor="#fff"
        android:layout_margin="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="Switch to sign up"
        android:gravity="center"
        android:background="@drawable/rounded_corners_background_button"
        />
</RelativeLayout>